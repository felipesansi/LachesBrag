<br />
<h4><strong>Carregar Imagens</strong></h4>
<br />
<!-- Início da tabela que organiza os formulários -->
<table border="0" width="100%">
    <tr>
        <td>
            <!-- Formulário para upload de arquivos -->
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                <hr />
                <!-- Grupo de entrada para arquivos -->
                <div class="form-group">
                    <div class="col-md-10">
                        <!-- Instruções para o usuário -->
                        <p><b>Selecione um ou mais arquivos para enviar :</b></p>
                        <p>(Arquivos com o mesmo nome serão sobrescritos)</p>
                        <!-- Campo de input para seleção de arquivos, com suporte para múltiplos arquivos -->
                        <input type="file" name="files" multiple class="btn btn-outline-danger" />
                    </div>
                </div>
                <hr />
                <!-- Botão de envio do formulário -->
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </td>
        <td>
            <!-- Formulário para visualizar os arquivos no servidor -->
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
                <div class="form-group">
                    <div class="col-md-10">
                        <!-- Instrução para visualização das imagens -->
                        <p><strong>Visualizar Imagens na pasta do servidor :</strong></p>
                    </div>
                </div>
                <hr />
                <!-- Botão para enviar a solicitação de visualização de arquivos -->
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Arquivos no servidor" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>

<!-- Div para exibir mensagens de sucesso ou erro -->
<div class="container">
    @if (ViewData["Deletado"] != null)
    {
        <!-- Se a chave "Deletado" existir em ViewData, exibe a mensagem de confirmação -->
        <ul>
            <li>@ViewData["Deletado"]</li> <!-- Exibe a mensagem armazenada em ViewData["Deletado"] -->
        </ul>
    }
</div>
