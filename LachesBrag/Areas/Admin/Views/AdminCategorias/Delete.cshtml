@model LachesBrag.Models.Categoria

@{
    ViewData["Title"] = "Apagar categoria";
}



<h3>Você tem certeza de que deseja excluir essa categoria?</h3>
<div>
    <h4>Categoria - @Model.CategoriaNome</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Apagar categoria" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista de categoria</a>
    </form>
</div>
