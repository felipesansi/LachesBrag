@model LachesBrag.Models.Categoria

@{
    ViewData["Title"] = "Detalhes categoria";
}

<h1>Detalhes da categoria</h1>

<div>
    <h4>Categoria- @Model.CategoriaNome</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoriaId">Editar categoria</a> |
    <a asp-action="Index">Voltar a lista de categoria</a>
</div>
