@model IEnumerable<LachesBrag.Models.Pedido>

<h2>Relatório de Vendas</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Pedidos: @Model.Count()</h3>
        <h3 class="panel-title">Total de Lanches nos Pedidos: @ViewData["totalLanches"]</h3>
        <h3 class="panel-title">Valor Total dos Pedidos: @((decimal)ViewData["valorTotalVendas"])</h3>
    </div>
</div>

@if (!Model.Any())
{
    <p class="text-center text-muted">Nenhum pedido encontrado no período selecionado.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Total de Itens</th>
                <th>Total do Pedido</th>
                <th>Data de Envio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.PedidoId</td>
                    <td>@pedido.Nome</td>
                    <td>@pedido.Email</td>
                    <td>@pedido.Telefone</td>
                    <td>@pedido.TotalItensPedidos</td>
                    <td>@pedido.PedidoTotal.ToString("c")</td>
                    <td>@pedido.PedidoEnviado.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
