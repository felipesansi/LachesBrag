@model IEnumerable<LachesBrag.Models.Pedido>

<h2>Pedidos Por Período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <label for="minDate">Data Inicial</label>
                <input type="date" class="form-control" name="minDate" value="@ViewData["dataMin"]" />
            </div>
            <div class="form-group">
                <label for="maxDate">Data Final</label>
                <input type="date" class="form-control" name="maxDate" value="@ViewData["dataMax"]" />
            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
        <h3 class="panel-title">Total de Lanches nos Pedidos = @Model.Sum(obj => obj.PedidoTotal).ToString()</h3>
        <h3 class="panel-title">Valor Total dos Pedidos = @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>@Html.DisplayNameFor(model => model.PedidoId)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.PedidoTotal)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalItensPedidos)</th>
                    <th>@Html.DisplayNameFor(model => model.PedididoEntregue)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PedidoId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.PedidoTotal)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalItensPedidos)</td>
                        <td>@Html.DisplayFor(modelItem => item.PedididoEntregue)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
