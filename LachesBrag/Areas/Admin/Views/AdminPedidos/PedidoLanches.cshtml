@model LachesBrag.ViewModel.PedidoLacheViewModel

@{
    ViewBag.Title = "Pedido do Lanche";
    decimal totalPedido = 0;
}

<h3>Pedido : @Html.DisplayFor(model => @Model.pedido.PedidoId)</h3>
<h3>Cliente : @Html.DisplayFor(model => @Model.pedido.Nome)</h3>
<h3>Data : @Html.DisplayFor(model => @Model.pedido.PedidoEnviado)</h3>
<h3>Entrega : @Html.DisplayFor(model => @Model.pedido.PedididoEntregue)</h3>
<hr />
<td colspan="2">&nbsp;</td>
<table class="table">
    
        @foreach (var itens in Model.pedido.PedidoItens)
        {
            totalPedido += (itens.Lanche.Preco * itens.Quantidade);
            <tr>
                <td align="right">
                    <h3>@Html.DisplayFor(modelitens => itens.Lanche.Nome)</h3>
                </td>
                <td align="right">
                    <img src="@itens.Lanche.ImagemUrl" class="img-fluid h-50 w-50" />
                </td>
                <td align="right">
                    <h3>@string.Format("{0:C}", itens.Lanche.Preco)</h3>
                </td>
                <td align="right">
                <h3>(@Html.DisplayFor(modelitens => itens.Quantidade))</h3>
                </td>
            
            </tr>
        }
        <tr>
            <td colspan="4" align="right"><strong>Total do Pedido:</strong></td>
            <td align="right"><h3>@string.Format("{0:C}", totalPedido)</h3></td>
        </tr>

</table>
<a asp-action="Index" class="btn btn-outline-info">Retornar</a>
